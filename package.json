{
  "name": "@theuiteam/continuous-container",
  "version": "2.0.0",
  "description": "State container with the known past, present, and the future",
  "main": "dist/es5/index.js",
  "author": "Anton Korzunov <thekashey@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@theuiteam/lib-builder": "^0.2.1",
    "@size-limit/preset-small-lib": "^2.1.6"
  },
  "module": "dist/es2015/index.js",
  "types": "dist/es5/index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "dev": "lib-builder dev",
    "test": "jest",
    "test:ci": "jest --runInBand --coverage",
    "build": "lib-builder build && yarn size:report",
    "release": "yarn build && yarn test",
    "size": "npx size-limit",
    "size:report": "npx size-limit --json > .size.json",
    "lint": "lib-builder lint",
    "format": "lib-builder format",
    "update": "lib-builder update",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "prepublish": "yarn build",
    "prepublish-only": "yarn build && yarn changelog",
    "prepare": "husky install",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:rewrite": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "peerDependencies": {
    "react": "^16.9.0 || ^17.0.0 || ^18.0.0",
    "@types/react": "^16.9.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "tslib": "^2.1.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [],
  "repository": "https://github.com/TheUiTeam/ContinuousContainer",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,css,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "module:es2019": "dist/es2019/index.js",
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  }
}
